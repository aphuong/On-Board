<h2><%= t 'devise.invitations.edit.header' %></h2>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>

  <div>
    <%= f.label :fname, "First Name" %><br />
    <%= f.text_field :fname, class: "form-control", placeholder: "First Name", required: true %>
  </div>

  <div>
    <%= f.label :lname, "Last Name" %><br />
    <%= f.text_field :lname, class: "form-control", placeholder: "Last Name", required: true %>
  </div>

  <div>
    <%= f.label :location %><br />
    <%= f.text_field :location, class: "form-control", placeholder: "Location", required: true  %>
  </div>

  <div>
    <%= f.label :goal, "Goals" %><br />
    <%= f.text_area :goal, class: "form-control", placeholder: "Goals", required: true %>
  </div>

  <div>
    <%= f.label :fun_fact, "Fun Fact About You" %><br />
    <%= f.text_area :fun_fact, class: "form-control", placeholder: "Fun Fact", required: true %>
  </div>
 
  <div>
    <%= f.label :pre_wdi, "What were you doing before WDI?" %><br />
    <%= f.text_area :pre_wdi, class: "form-control", placeholder: "Pre WDI", required: true %>
  </div>

  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit t("devise.invitations.edit.submit_button") %></p>
<% end %>
