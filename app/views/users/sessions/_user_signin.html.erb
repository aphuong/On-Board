<h2>WELCOME BACK</h2>

<%= form_for(:user, url: session_path(:user)) do |f| %>
  <div class="log-in">

    <div><%= f.label :email, "E-mail" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "email-input"%></div>

    <div><%= f.label :password, "Password" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "password-input" %></div>
    
    <span class="user-login-btn"><%= f.submit "Log in"  %></span>
  </div>
<% end %>




